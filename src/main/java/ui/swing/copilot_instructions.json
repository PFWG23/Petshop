{
  "codingStyle": {
    "language": "pt-BR",
    "namingConvention": "camelCase",
    "allowInconsistentNaming": true,
    "maxMethodLength": 60,
    "commentingStyle": "minimal",
    "allowConversationalComments": false,
    "formattingStrictness": "medium",
    "introduceNaturalImperfections": true
  },
  "uiGuidelines": {
    "framework": "swing",
    "layoutStrategy": "mixed",
    "avoidTextbookStructure": true,
    "componentNaming": "nonUniform",
    "colorUsage": "variedAndRealistic",
    "reuseColors": false,
    "buttonCreation": "via makeButton or inline",
    "theme": "systemDefault",
    "sampleData": "realistic",
    "lookAndFeel": "randomOrNative"
  },
  "dataAndValidation": {
    "validationPattern": "varied",
    "errorMessages": "customizedAndRealistic",
    "fieldChecks": "nonUniform",
    "sampleIDs": "nonSequential",
    "allowEmptyFieldsForTesting": true
  },
  "projectStructure": {
    "packages": {
      "ui": "ui.swing",
      "models": "model",
      "controllers": "controller",
      "utils": "util"
    },
    "fileOrganization": "looselyModular",
    "methodReuse": "moderate",
    "singletonUse": "optional"
  },
  "iaDetectionAvoidance": {
    "humanizePatterns": true,
    "avoidPerfectFormatting": true,
    "introduceNaturalErrors": false,
    "allowRedundantCode": true,
    "avoidDidacticComments": true,
    "useRealWorldUX": true
  },
  "developerPersona": {
    "level": "intermediate",
    "style": "casualProfessional",
    "habits": {
      "sometimesForgetsComments": true,
      "reusesCodeFromMemory": true,
      "testsVisually": true
    }
  }
}

